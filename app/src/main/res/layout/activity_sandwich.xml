<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Customize your Sandwich"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Protein"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/rgProtein"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Roast Beef"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Salmon"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Chicken"
                    android:textSize="20sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bread"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/rgBread"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Brioche"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Wheat"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Pretzel"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Bagel"
                    android:textSize="20sp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="SourDough"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add-ons"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/cbLettuce"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Lettuce"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbTomato"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Tomatoes"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbOnion"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Onions"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbAvocado"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Avocado"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbCheese"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Cheese"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/spQty"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Quantity"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spQty"
                android:layout_width="match_parent"
                android:layout_height="75dp" />

            <TextView
                android:id="@+id/tvTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Price: "
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCombo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make it a combo" />

            <Button
                android:id="@+id/btnPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place order" />

            <Button
                android:id="@+id/btnMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Menu" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>